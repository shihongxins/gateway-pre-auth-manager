{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noImplicitAny": false,
    // 添加以下配置来改善类型推断
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    // 改善模块解析
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "auto-imports.d.ts",
    "components.d.ts",
    "node_modules/tdesign-vue-next/global.d.ts",
  ]
}
